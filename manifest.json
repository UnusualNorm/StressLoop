{
"update_url": "https://clients2.google.com/service/update2/crx",

  "name": "StressLoop",
  "version": "1.0",
  "manifest_version": 2,
  "description": "StressLoop, the internet destroyer!",
  "homepage_url": "http://slimsy.unusualnorm.com/",
  "icons": {
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "https://www.stressthem.to/",
    "activeTab",
    "storage"
  ],
  "background": {
    "scripts": [
      "js/background/background.js"
    ],
    "persistent": true
  },
  "browser_action": {
    "default_popup": "popup/popup.html",
    "default_title": "Currently Destroying the Interwebs."
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "js/jquery/jquery.min.js",
        "js/inject/inject.js",
        "js/inject/stressthem.to.js"
      ],
      "css": [
        "css/inject/inject.css"
      ]
    }
  ],
  "web_accessible_resources": [
    "images/loopAnim.gif",
    "popup/popup.html",
    "EEggs/pong.html",
    "EEggs/snake.html",
    "EEggs/tetris.html",
    "EEggs/breakout.html",
    "EEggs/bomberman.html"
  ]
}
